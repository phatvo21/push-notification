{
  "compilerOptions": {
    "module": "commonjs",
    "resolveJsonModule": true,
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "es2020",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "incremental": true,
    "esModuleInterop": true,
    "paths": {
      "@app/notification": ["apps/notification/src"],
      "@app/common": ["libs/common/src"],
      "@app/notification/*": ["apps/notification/src/*"],
      "@app/common/*": ["libs/common/src/*"]
    }
  }
}
